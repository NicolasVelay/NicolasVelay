---
import BaseLayout from "./BaseLayout.astro";
import TableOfContent from "../components/TableOfContent.astro";
import convertHtml from "../tools/convertHTML";
import "remark-github-blockquote-alert/alert.css";

const { title, pubDate, theme } = Astro.props.frontmatter;
const { minutesRead, headings, html } = Astro.props;
---

<BaseLayout pageTitle={title}>
    <TableOfContent headings={headings} />
    <div class="info">
        <p>
            {
                pubDate.toLocaleDateString("en-US", {
                    month: "short",
                    day: "numeric",
                    year: "numeric",
                })
            }
        </p>
        |
        <p>{minutesRead}</p>
        |
        <a href={theme} target="_blank">Theme</a>
    </div>
    <article id="article">
        <Fragment set:html={convertHtml(html)} />
    </article>
</BaseLayout>
<style>
    a {
        text-decoration: none;
    }
    .info {
        display: flex;
        gap: 8px;
        align-items: center;
        margin-top: -30px;
    }
</style>
