---
const { title, url, description } = Astro.props;
---

<li>
    <article>
        <a href={url}>
            <p class="title">{title}</p>
            <p class="description">{description}</p>
        </a>
    </article>
</li>
<style>
    li {
        border-bottom: 1px solid rgba(117, 117, 117, 0.443);
        list-style-type: none;
    }
    a {
        text-decoration: none;
        display: flex;
        flex-direction: column;
        margin-top: 16px;
    }
    .title {
        margin: 0;
        font-size: large;
        font-weight: 600;
    }
    .description {
        margin: 0;
        margin-bottom: 8px;
    }
</style>
